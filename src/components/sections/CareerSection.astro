---
import { Image } from 'astro:assets';
import Button from '@/components/ui/Button.astro';
import { CheckCircle } from '@/components/ui/icons';
import careerIllustration from '../../../career.png';

const highlights = [
  'Join our talent network for upcoming roles',
  'Collaborate with global teams on impactful products',
  'Get early access to contract and full-time openings'
];
---

<section class="bg-secondary py-16">
  <div class="container mx-auto grid items-center gap-12 md:grid-cols-2">
    <div class="space-y-6 text-center md:text-left">
      <span class="text-sm font-semibold uppercase tracking-widest text-primary">Careers</span>
      <h2 class="font-headline text-3xl font-bold text-gray-900 dark:text-white md:text-4xl">
        Shape Your Next Chapter with Markosh
      </h2>
      <p class="text-muted-foreground">
        Stay in the loop as we assemble new project teams and announce open roles across engineering, product, and design.
      </p>
      <ul class="space-y-3 text-left">
        {highlights.map((item) => (
          <li class="flex items-start gap-3 text-muted-foreground">
            <CheckCircle className="mt-1 h-5 w-5 text-primary" />
            <span>{item}</span>
          </li>
        ))}
      </ul>
      <div class="flex flex-col items-center gap-4 pt-2 md:flex-row md:items-center">
        <Button href="/career" size="lg" class="btn-gradient font-semibold shadow-lg">
          Explore Careers
        </Button>
        <Button href="/contact" size="lg" variant="outline">
          Talk to Our Team
        </Button>
      </div>
    </div>
    <div class="relative flex justify-center">
      <div class="absolute inset-0 rounded-full bg-gradient-to-tr from-primary to-accent opacity-20 blur-3xl"></div>
      <Image
        src={careerIllustration}
        alt="Team collaborating at Markosh"
        width={600}
        height={450}
        class="relative z-10 w-full max-w-md rounded-xl shadow-2xl"
        loading="lazy"
        format="webp"
        quality={85}
      />
    </div>
  </div>
</section>
