---
import Button from '@/components/ui/Button.astro';
---

<section class="bg-background">
  <div class="container mx-auto">
    <div class="relative isolate overflow-hidden bg-primary/5 px-6 py-20 text-center shadow-lg rounded-2xl sm:px-16">
      <div class="absolute -top-24 left-1/2 -z-10 h-[30rem] w-[50rem] -translate-x-1/2 rounded-full bg-gradient-to-tr from-primary to-accent opacity-20 blur-3xl" aria-hidden="true"></div>
      <h2 class="font-headline mx-auto max-w-2xl text-3xl font-bold tracking-tight text-gray-900 dark:text-white sm:text-4xl">
        Ready to Build Your Future?
      </h2>
      <p class="mx-auto mt-6 max-w-xl text-lg leading-8 text-muted-foreground">
        Let's discuss how our IT staffing and software development expertise can help you achieve your business goals.
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <Button href="/contact" size="lg" class="btn-gradient font-semibold shadow-lg">
          Get a Free Consultation
          <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        </Button>
      </div>
    </div>
  </div>
</section>