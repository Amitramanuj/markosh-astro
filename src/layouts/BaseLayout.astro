---
import '../styles/global.css';
import TaskadeWidget from '../components/islands/TaskadeWidget.tsx';
import { generateOrganizationStructuredData, mergeSEOConfig, type SEOConfig } from '../lib/seo-utils';

export interface Props extends SEOConfig {}

const seoConfig = mergeSEOConfig(Astro.props, Astro.url.pathname);
const structuredData = generateOrganizationStructuredData();
---

<!doctype html>
<html lang="en" class="!scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Primary Meta Tags -->
    <title>{seoConfig.title}</title>
    <meta name="title" content={seoConfig.title} />
    <meta name="description" content={seoConfig.description} />
    <link rel="canonical" href={seoConfig.canonical} />
    {seoConfig.noindex && <meta name="robots" content="noindex, nofollow" />}
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={seoConfig.type} />
    <meta property="og:url" content={seoConfig.canonical} />
    <meta property="og:title" content={seoConfig.title} />
    <meta property="og:description" content={seoConfig.description} />
    <meta property="og:image" content={seoConfig.image} />
    <meta property="og:site_name" content="Markosh" />
    <meta property="og:locale" content="en_US" />
    {seoConfig.publishedTime && <meta property="article:published_time" content={seoConfig.publishedTime} />}
    {seoConfig.modifiedTime && <meta property="article:modified_time" content={seoConfig.modifiedTime} />}
    {seoConfig.author && <meta property="article:author" content={seoConfig.author} />}
    {seoConfig.section && <meta property="article:section" content={seoConfig.section} />}
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={seoConfig.canonical} />
    <meta property="twitter:title" content={seoConfig.title} />
    <meta property="twitter:description" content={seoConfig.description} />
    <meta property="twitter:image" content={seoConfig.image} />
    
    <!-- Favicon and Icons -->
    <link rel="icon" type="image/svg+xml" href="data:image/svg+xml,<svg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 100 100'><path d='M10 85 L10 15 L30 15 L50 55 L70 15 L90 15 L90 85 L75 85 L75 40 L60 75 L40 75 L25 40 L25 85 Z' fill='%232563eb' transform='translate(3,3)'/><path d='M7 82 L7 12 L27 12 L47 52 L67 12 L87 12 L87 82 L72 82 L72 37 L57 72 L37 72 L22 37 L22 82 Z' fill='%237c3aed'/></svg>" />
    <link rel="apple-touch-icon" sizes="180x180" href="/markosh-logo.png" />
    <link rel="icon" type="image/png" sizes="32x32" href="/markosh-logo.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/markosh-logo.png" />
    
    <!-- Performance and SEO optimizations -->
    <meta name="theme-color" content="#4338CA" />
    <meta name="color-scheme" content="light dark" />
    
    <!-- Security headers -->
    <meta http-equiv="Content-Security-Policy" content="default-src 'self'; font-src 'self' fonts.gstatic.com fonts.googleapis.com; style-src 'self' 'unsafe-inline' fonts.googleapis.com; img-src 'self' data: https:; script-src 'self'; connect-src 'self'; frame-src 'self' https://taskade.com;" />
    <meta http-equiv="X-Content-Type-Options" content="nosniff" />
    <meta http-equiv="X-Frame-Options" content="SAMEORIGIN" />
    <meta http-equiv="Referrer-Policy" content="strict-origin-when-cross-origin" />
    
    <!-- Accessibility improvements -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
    
    <!-- Preconnect to external domains for performance -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link rel="preconnect" href="https://images.unsplash.com" />
    <link rel="dns-prefetch" href="https://placehold.co" />
    <link rel="dns-prefetch" href="https://via.placeholder.com" />
    

    
    <!-- Optimized font loading with resource hints and reduced weights -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link 
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;600;700&display=swap" 
      rel="stylesheet" 
      media="print" 
      onload="this.media='all'"
    />
    <noscript>
      <link 
        href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=Poppins:wght@400;600;700&display=swap" 
        rel="stylesheet" 
      />
    </noscript>
    
    <!-- Critical CSS inlined from critical.css for above-the-fold performance -->
    <style>
      /* Essential CSS loaded inline to prevent FOUC */
      :root {
        --background: 240 50% 98%;
        --foreground: 224 39% 10%;
        --primary: 243 55% 58%;
        --primary-foreground: 0 0% 100%;
        --accent: 239 85% 66%;
        --font-inter: 'Inter', system-ui, -apple-system, sans-serif;
        --font-poppins: 'Poppins', system-ui, -apple-system, sans-serif;
        --radius: 0.5rem;
      }
      
      .dark {
        --background: 224 39% 10%;
        --foreground: 0 0% 98%;
        --primary: 239 85% 66%;
        --primary-foreground: 224 39% 10%;
        --accent: 245 58% 52%;
      }
      
      *,*::before,*::after{box-sizing:border-box;margin:0;padding:0}
      html{scroll-behavior:smooth;font-family:var(--font-inter);line-height:1.5;-webkit-text-size-adjust:100%;tab-size:4}
      body{min-height:100vh;background-color:hsl(var(--background));color:hsl(var(--foreground));font-family:var(--font-inter);-webkit-font-smoothing:antialiased;-moz-osx-font-smoothing:grayscale}
      .container{width:100%;max-width:1200px;margin:0 auto;padding:0 1rem}
      .font-body{font-family:var(--font-inter)}
      .font-headline{font-family:var(--font-poppins)}
      .btn-gradient{background:linear-gradient(135deg,hsl(var(--primary)) 0%,hsl(var(--accent)) 100%);color:hsl(var(--primary-foreground));border:none;border-radius:calc(var(--radius));padding:0.75rem 1.5rem;font-weight:600;transition:all 0.2s ease-in-out}
      .btn-gradient:hover{transform:translateY(-1px);box-shadow:0 10px 25px -5px rgba(67,56,202,0.25)}
      @font-face{font-family:'Inter';font-display:swap}
      @font-face{font-family:'Poppins';font-display:swap}
    </style>
    
    <!-- Structured Data for SEO -->
    <script type="application/ld+json" set:html={JSON.stringify(structuredData)}></script>
  </head>
  <body class="min-h-screen font-body antialiased">
    <!-- Skip link for screen readers -->
    <a href="#main-content" class="sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 z-50 bg-primary text-primary-foreground px-4 py-2 rounded">
      Skip to main content
    </a>
    <slot />
    <!-- Taskade Widget -->
    <TaskadeWidget client:idle />
    
    <!-- Performance monitoring script -->
    <script>
      // Initialize performance monitoring
      if (typeof window !== 'undefined') {
        import('/src/lib/performance.ts').then(({ initPerformanceMonitoring, analyzeResourceTiming }) => {
          initPerformanceMonitoring();
          
          // Analyze resources after load
          window.addEventListener('load', () => {
            setTimeout(analyzeResourceTiming, 2000);
          });
        });
      }
    </script>
  </body>
</html>