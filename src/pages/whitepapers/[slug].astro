---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import FadeInSection from '@/components/islands/FadeInSection.tsx';
import { whitepapers } from '@/lib/whitepapers';
import type { Whitepaper } from '@/lib/whitepapers';

export async function getStaticPaths() {
  return whitepapers.map((paper) => ({
    params: { slug: paper.slug },
    props: { paper }
  }));
}

const { paper } = Astro.props as { paper: Whitepaper };

const related = whitepapers.filter((entry) => entry.slug !== paper.slug).slice(0, 2);
const updatedDate = paper.updated ?? paper.published;
const formatDate = (iso: string) =>
  new Date(`${iso}T00:00:00Z`).toLocaleDateString('en-US', {
    month: 'short',
    day: 'numeric',
    year: 'numeric'
  });
---

<BaseLayout
  title={`${paper.title} - Markosh White Papers`}
  description={paper.heroSummary}
  canonical={`https://markosh.com/whitepapers/${paper.slug}/`}
  type="article"
  publishedTime={paper.published}
  modifiedTime={updatedDate}
  section={paper.category}
>
  <Header />
  <main id="main-content" class="bg-background">
    <FadeInSection client:visible>
      <section class="bg-secondary">
  <div class="container mx-auto py-5">
          <nav aria-label="Breadcrumb" class="text-sm text-muted-foreground">
            <ol class="flex items-center gap-2 flex-wrap">
              <li><a class="hover:text-primary" href="/">Home</a></li>
              <li aria-hidden="true" class="text-muted-foreground/70">/</li>
              <li><a class="hover:text-primary" href="/whitepapers/">White Papers</a></li>
              <li aria-hidden="true" class="text-muted-foreground/70">/</li>
              <li aria-current="page" class="text-foreground">{paper.title}</li>
            </ol>
          </nav>
          <div class="mt-4 max-w-3xl space-y-3">
            <span class="inline-flex rounded-full bg-primary/10 px-4 py-1 text-sm font-semibold text-primary">
              {paper.category}
            </span>
            <h1 class="font-headline text-4xl font-extrabold tracking-tight text-foreground sm:text-5xl">
              {paper.title}
            </h1>
            <p class="text-lg leading-relaxed text-muted-foreground">
              {paper.heroSubtitle}
            </p>
            <div class="flex flex-wrap items-center gap-2 text-sm text-muted-foreground">
              <span>Published {formatDate(paper.published)}</span>
              <span aria-hidden="true">•</span>
              <span>Last updated {formatDate(updatedDate)}</span>
              <span aria-hidden="true">•</span>
              <span>Read time ~{paper.readTimeMinutes} min</span>
            </div>
          </div>
        </div>
      </section>
    </FadeInSection>

    <FadeInSection client:visible>
      <section class="py-6">
        <div class="container mx-auto grid gap-6 lg:grid-cols-[minmax(0,1fr)_320px]">
          <article class="space-y-4">
            <p class="text-lg leading-relaxed text-foreground">
              {paper.heroSummary}
            </p>
            {paper.sections.map((section) => (
              <section class="space-y-3">
                <div class="space-y-2">
                  <h2 class="font-headline text-2xl font-bold tracking-tight text-foreground sm:text-3xl">
                    {section.title}
                  </h2>
                  {section.intro && (
                    <p class="text-base leading-relaxed text-muted-foreground">
                      {section.intro}
                    </p>
                  )}
                  {section.paragraphs?.map((paragraph) => (
                    <p class="text-base leading-relaxed text-foreground">
                      {paragraph}
                    </p>
                  ))}
                </div>
                {section.bullets && (
                  <ul class="space-y-1 rounded-2xl bg-secondary/40 p-4 text-base leading-relaxed text-foreground">
                    {section.bullets.map((bullet) => (
                      <li class="flex gap-3">
                        <span class="mt-1 h-2 w-2 shrink-0 rounded-full bg-primary" aria-hidden="true"></span>
                        <span>
                          {bullet.label && (
                            <strong class="mr-1 font-semibold text-foreground">{bullet.label}</strong>
                          )}
                          {bullet.text}
                        </span>
                      </li>
                    ))}
                  </ul>
                )}
                {section.takeaway && (
                  <div class="rounded-2xl border-l-4 border-primary bg-primary/5 p-4 text-sm leading-relaxed text-foreground shadow-sm">
                    <strong class="block font-semibold text-primary">Takeaway</strong>
                    <span class="mt-0.5 block">{section.takeaway}</span>
                  </div>
                )}
              </section>
            ))}
          </article>

          <aside class="space-y-3">
            <div class="rounded-3xl border border-border/70 bg-background p-5 shadow-sm">
              <h2 class="font-headline text-lg font-semibold text-foreground">Quick highlights</h2>
              <ul class="mt-3 space-y-1 text-sm text-muted-foreground">
                {paper.highlights.map((highlight) => (
                  <li class="flex gap-3">
                    <span class="mt-1 h-2 w-2 shrink-0 rounded-full bg-primary" aria-hidden="true"></span>
                    <span>{highlight}</span>
                  </li>
                ))}
              </ul>
            </div>

            <div class="rounded-3xl border border-border/70 bg-background p-5 shadow-sm">
              <h2 class="font-headline text-lg font-semibold text-foreground">Recommended next steps</h2>
              <ol class="mt-3 space-y-1 text-sm text-muted-foreground">
                {paper.recommendedActions.map((action, index) => (
                  <li class="flex gap-3">
                    <span class="font-semibold text-primary">{index + 1}.</span>
                    <span>{action}</span>
                  </li>
                ))}
              </ol>
              <a
                href="/contact/"
                class="mt-4 inline-flex w-full items-center justify-center rounded-full bg-primary px-4 py-2 text-sm font-semibold text-primary-foreground transition-colors duration-200 hover:bg-primary/90 focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-2 focus-visible:ring-offset-background"
              >
                Talk with our strategy team
              </a>
            </div>

            {related.length > 0 && (
              <div class="rounded-3xl border border-border/70 bg-background p-5 shadow-sm">
                <h2 class="font-headline text-lg font-semibold text-foreground">More white papers</h2>
                <ul class="mt-3 space-y-1 text-sm text-primary">
                  {related.map((item) => (
                    <li>
                      <a class="inline-flex items-start gap-2 hover:underline" href={`/whitepapers/${item.slug}/`}>
                        <span class="mt-1 h-2 w-2 shrink-0 rounded-full bg-primary/60" aria-hidden="true"></span>
                        <span class="text-left text-foreground">{item.title}</span>
                      </a>
                    </li>
                  ))}
                </ul>
                <a
                  href="/whitepapers/"
                  class="mt-6 inline-flex items-center gap-2 text-sm font-semibold text-primary hover:text-primary/80"
                >
                  View all white papers
                  <svg
                    class="h-4 w-4"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    aria-hidden="true"
                  >
                    <line x1="5" x2="19" y1="12" y2="12" />
                    <polyline points="12 5 19 12 12 19" />
                  </svg>
                </a>
              </div>
            )}
          </aside>
        </div>
      </section>
    </FadeInSection>
  </main>
  <Footer />
</BaseLayout>
