---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import HeroSection from '@/components/sections/HeroSection.astro';
import ServicesOverview from '@/components/sections/ServicesOverview.astro';
import WhyChooseUs from '@/components/sections/WhyChooseUs.astro';
import IndustriesSection from '@/components/sections/IndustriesSection.astro';
import TestimonialsSection from '@/components/sections/TestimonialsSection.astro';
import CtaSection from '@/components/sections/CtaSection.astro';
import FadeInSection from '@/components/islands/FadeInSection.tsx';
import { pageSEO } from '@/lib/seo-utils';
---

<BaseLayout {...pageSEO.home}>
  <Header />
  <main id="main-content">
    <!-- Hero section loads immediately for LCP -->
    <FadeInSection client:load>
      <HeroSection />
    </FadeInSection>
    
    <!-- Services section loads when visible -->
    <FadeInSection client:visible>
      <ServicesOverview />
    </FadeInSection>
    
    <!-- Non-critical sections load when idle -->
    <FadeInSection client:idle>
      <WhyChooseUs />
    </FadeInSection>
    <FadeInSection client:idle>
      <IndustriesSection />
    </FadeInSection>
    <FadeInSection client:idle>
      <TestimonialsSection />
    </FadeInSection>
    
    <!-- CTA section visible for conversions -->
    <FadeInSection client:visible>
      <CtaSection />
    </FadeInSection>
  </main>
  <Footer />
</BaseLayout>