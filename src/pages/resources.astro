---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Header from '@/components/layout/Header.astro';
import Footer from '@/components/layout/Footer.astro';
import FadeInSection from '@/components/islands/FadeInSection.tsx';

import { Card, CardHeader, CardTitle, CardDescription, CardContent } from "@/components/ui/card.tsx";
import { FileText, BookOpen, Newspaper } from "@/components/ui/icons";
---

<BaseLayout 
  title="Resources - Markosh"
  description="Explore our insights, research, and success stories."
  canonical="https://markosh.com/resources/"
>
  <Header />
  <main>
    <FadeInSection client:visible>
      <section class="bg-secondary">
        <div class="container mx-auto text-center py-16">
          <h1 class="font-headline text-4xl font-extrabold tracking-tight sm:text-5xl">Resources</h1>
          <p class="mt-4 max-w-2xl mx-auto text-lg text-muted-foreground">
            Explore our insights, research, and success stories.
          </p>
        </div>
      </section>
    </FadeInSection>

    <FadeInSection client:visible>
      <section class="py-16">
        <div class="container mx-auto">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <Card className="text-center">
              <CardHeader>
                <FileText className="w-12 h-12 text-primary mx-auto mb-4" />
                <CardTitle>Case Studies</CardTitle>
                <CardDescription>Real-world examples of how we've helped our clients succeed.</CardDescription>
              </CardHeader>
              <CardContent>
                <p class="text-muted-foreground">Our case studies are coming soon. Check back later to see our success stories.</p>
              </CardContent>
            </Card>
            
            <a
              href="/whitepapers/"
              class="group block h-full rounded-xl focus:outline-none focus-visible:ring-2 focus-visible:ring-primary focus-visible:ring-offset-4 focus-visible:ring-offset-background"
              aria-label="Explore our latest white papers"
            >
              <Card className="text-center h-full transition-transform duration-200 group-hover:-translate-y-1 group-hover:shadow-lg">
                <CardHeader>
                  <BookOpen className="w-12 h-12 text-primary mx-auto mb-4 transition-colors duration-200 group-hover:text-primary" />
                  <CardTitle>White Papers</CardTitle>
                  <CardDescription>In-depth reports on industry trends and technologies.</CardDescription>
                </CardHeader>
                <CardContent>
                  <p class="text-muted-foreground">
                    Access strategy-led research on AI-assisted development systems, operations, and economics.
                  </p>
                  <div class="mt-6 flex justify-center">
                    <span class="inline-flex items-center gap-2 rounded-full border border-primary/40 px-4 py-2 text-sm font-semibold text-primary transition-colors duration-200 group-hover:bg-primary group-hover:text-primary-foreground">
                      Explore white papers
                      <svg
                        class="h-4 w-4"
                        viewBox="0 0 24 24"
                        fill="none"
                        stroke="currentColor"
                        stroke-width="2"
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        aria-hidden="true"
                      >
                        <line x1="5" x2="19" y1="12" y2="12" />
                        <polyline points="12 5 19 12 12 19" />
                      </svg>
                    </span>
                  </div>
                </CardContent>
              </Card>
            </a>
            
            <Card className="text-center">
              <CardHeader>
                <Newspaper className="w-12 h-12 text-primary mx-auto mb-4" />
                <CardTitle>Blog</CardTitle>
                <CardDescription>Articles on software development, IT staffing, and business growth.</CardDescription>
              </CardHeader>
              <CardContent>
                <p class="text-muted-foreground">Our blog is launching soon. Get ready for expert articles and tips.</p>
              </CardContent>
            </Card>
          </div>
        </div>
      </section>
    </FadeInSection>
  </main>
  <Footer />
</BaseLayout>